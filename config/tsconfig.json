{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "..",
    "paths": {
      "@/*": [
        "../*"
      ],
      "@assets/*": [
        "../assets/*"
      ],
      "@data/*": [
        "../data/*"
      ],
      "@config/*": [
        "../config/*"
      ],
      "@src/*": [
        "../src/*"
      ],
      "@components/*": [
        "../app/assets/components/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "../**/*.ts",
    "../**/*.tsx",
    "../.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "moduleResolution": "node",
      "skipLibCheck": true
    }
  },
  "exclude": [
    "node_modules"
  ]
}
