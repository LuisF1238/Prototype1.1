{
  "extends": "./config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@assets/*": ["./assets/*"],
      "@data/*": ["./data/*"],
      "@config/*": ["./config/*"],
      "@src/*": ["./src/*"],
      "@components/*": ["./app/assets/components/*"]
    }
  },
  "include": [
    "./config/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}